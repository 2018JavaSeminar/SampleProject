# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.ProductListController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /product/info               controllers.ProductInfoManageController.init()
GET     /product/:prodNo            controllers.ProductInfoManageController.edit(prodNo:String)
POST    /product                    controllers.ProductInfoManageController.create()
POST    /product/:prodNo            controllers.ProductInfoManageController.update(prodNo:String)
POST    /product/delete/:prodNo     controllers.ProductInfoManageController.delete(prodNo:String)

# SQLVersion
GET     /sql/index                  controllers.ProductListSqlController.index()

GET     /sql/product/info               controllers.ProductInfoManageSqlController.init()
GET     /sql/product/:prodNo            controllers.ProductInfoManageSqlController.edit(prodNo:String)
POST    /sql/product                controllers.ProductInfoManageSqlController.create()
POST    /sql/product/:prodNo            controllers.ProductInfoManageSqlController.update(prodNo:String)
POST    /sql/product/delete/:prodNo     controllers.ProductInfoManageSqlController.delete(prodNo:String)